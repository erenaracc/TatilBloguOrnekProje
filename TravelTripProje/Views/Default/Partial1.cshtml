@using TravelTripProje.Models.Sınıflar
@model List<Blog>

@{ int a = 0;}
@foreach (var x in Model)
{
    a++;
    var ss = "left";
    if (a == 3)
    {
        ss = "right";
    }
    else if (a > 3)
    {
        break;
    }

    <div class="@ss">
        <div class="bot-left">
            <img src="@x.BlogImage" alt="" style="width:420px;height:150px;"/>
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.ToString("dd:MM:yyyy")</span>
            <p>@x.Aciklama.Substring(0, 80)...</p>
            <p><a href="/Blog/BlogDetay/@x.Id"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
    @Html.Action("Partial2", "Default");
}